{
  "name": "101-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prettify": "prettier -l --write \"**/*.js\"",
    "test": "jest --forceExit",
    "build": "esbuild src/static/js/app.jsx --outfile=src/static/js/app.bundle.js --jsx=transform --jsx-factory=React.createElement --jsx-fragment=React.Fragment --target=es2018 --minify",
    "dev": "nodemon src/index.js",
    "dev:watch": "npm run build -- --watch & nodemon src/index.js",
    "seed": "node src/persistence/seed.js",
    "start": "node src/index.js"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-session": "^1.19.0",
    "mysql": "^2.17.1",
    "uuid": "^3.3.3",
    "wait-port": "^0.2.2",
    "yarn": "^1.22.10"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "jest": "^29.7.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "supertest": "^7.2.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/jest/setEnvVars.js"
    ],
    "testTimeout": 15000,
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
